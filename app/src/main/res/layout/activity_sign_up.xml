<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26577E"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"></ImageView>


    <EditText

        android:id="@+id/userNameSignUp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#26577E"
        android:textColorHint="#26577E"
        android:textSize="15sp"></EditText>


    <EditText
        android:id="@+id/phoneSignUp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:hint="Phone"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColor="#26577E"
        android:textColorHint="#26577E"
        android:textSize="15sp"></EditText>

    <EditText
        android:id="@+id/emailSignUp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="#26577E"
        android:textColorHint="#26577E"
        android:textSize="15sp"></EditText>


    <EditText
        android:id="@+id/passwordSignUp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="#26577E"
        android:textColorHint="#26577E"
        android:textSize="15sp"></EditText>

    <TextView
        android:id="@+id/signUpNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/passwordLogin"
        android:text="Create account failure - Try again"
        android:textColor="#FF0909"
        android:textSize="15sp"></TextView>

    <Button
        android:id="@+id/confirmSignUp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:onClick="onSignUp"
        android:text="Sign Up"
        android:textColor="@color/tong"
        android:textSize="20sp">

    </Button>
</LinearLayout>